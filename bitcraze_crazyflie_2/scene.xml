<mujoco model="CF2 scene">
  <include file="cf2.xml"/>

  <statistic center="0 0 0.1" extent="0.2" meansize=".05"/>

  <visual>
    <quality shadowsize="4096" offsamples="8"/>
    <map znear="0.01" zfar="50"/>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global offwidth="1280" offheight="720"/>
  </visual>

  <asset>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
      <!-- Floor: wood/parquet -->
    <texture name="tex-floor" type="2d" builtin="checker" width="512" height="512"
            rgb1="0.65 0.60 0.55" rgb2="0.55 0.50 0.45" mark="none"/>
    <material name="mat-floor" texture="tex-floor" texrepeat="8 6" texuniform="true"
              rgba="1 1 1 1" specular="0.2" shininess="0.3"/>

    <!-- Walls: subtle plaster -->
    <texture name="tex-wall" type="2d" builtin="checker" width="512" height="512"
            rgb1="0.93 0.93 0.96" rgb2="0.90 0.90 0.94" mark="none"/>
    <material name="mat-wall" texture="tex-wall" texrepeat="6 2" texuniform="true"
              rgba="1 1 1 1" specular="0.05" shininess="0.1"/>

    <!-- Ceiling: plain -->
    <material name="mat-ceiling" rgba="0.95 0.95 0.97 1" specular="0.02" shininess="0.05"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <light name="ceiling_light" pos="0 0 2.8" dir="0 0 -1" cutoff="100" exponent="2"
       diffuse="0.9 0.85 0.8" specular="0.3 0.3 0.3" ambient="0.05 0.05 0.05"
       castshadow="true" />
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    <!-- Floor (you already have a plane; keep it for infinite ground, or use this finite floor box) -->
    <geom name="floor_box" type="box" pos="0 0 0.025" size="3 2.5 0.025" material="mat-floor" contype="1" conaffinity="1"/>

    <!-- Ceiling -->
    <geom name="ceiling" type="box" pos="0 0 3.0" size="3 2.5 0.05" material="mat-ceiling" contype="0" conaffinity="0"/>

    <!-- Walls (thickness 0.1 m, height 3 m) -->
    <!-- Back wall -->
    <geom name="wall_back" type="box" pos="0 2.5 1.5" size="3 0.05 1.5" material="mat-wall"/>
    <!-- Front wall (with 0.9 m wide door opening centered at x=0) -->
    <geom name="wall_front_left"  type="box" pos="-1.05 -2.5 1.5" size="1.95 0.05 1.5" material="mat-wall"/>
    <geom name="wall_front_right" type="box" pos=" 1.05 -2.5 1.5" size="1.95 0.05 1.5" material="mat-wall"/>
    <!-- Left / Right walls -->
    <geom name="wall_left"  type="box" pos="-3 0 1.5" size="0.05 2.5 1.5" material="mat-wall"/>
    <geom name="wall_right" type="box" pos=" 3 0 1.5" size="0.05 2.5 1.5" material="mat-wall"/>

    <!-- Optional door slab (visual only) -->
    <geom name="door" type="box" pos="0 -2.45 1.0" size="0.45 0.03 1.0" rgba="0.7 0.7 0.7 1" contype="0" conaffinity="0"/>

    <!-- ===== FURNITURE (simple collision boxes) ===== -->
    <!-- Table -->
    <geom name="table_top" type="box" pos=" -1.2  0.5 0.75" size="0.7 0.4 0.05" rgba="0.45 0.30 0.18 1"/>
    <geom name="table_leg1" type="cylinder" pos="-1.75 0.90 0.37" size="0.05 0.37" rgba="0.2 0.2 0.2 1"/>
    <geom name="table_leg2" type="cylinder" pos="-0.65 0.90 0.37" size="0.05 0.37" rgba="0.2 0.2 0.2 1"/>
    <geom name="table_leg3" type="cylinder" pos="-1.75 0.10 0.37" size="0.05 0.37" rgba="0.2 0.2 0.2 1"/>
    <geom name="table_leg4" type="cylinder" pos="-0.65 0.10 0.37" size="0.05 0.37" rgba="0.2 0.2 0.2 1"/>

    <!-- Sofa (two boxes) -->
    <geom name="sofa_base" type="box" pos="1.5 0.0 0.35" size="0.9 0.4 0.35" rgba="0.7 0.7 0.75 1"/>
    <geom name="sofa_back" type="box" pos="1.5 -0.35 0.75" size="0.9 0.05 0.35" rgba="0.65 0.65 0.7 1"/>


  </worldbody>
</mujoco>

