<mujoco model="IndoorRoom">
  <include file="cf2.xml"/>

  <!-- Physics -->
  <option timestep="0.002" gravity="0 0 -9.81" integrator="RK4"/>

  <!-- Assets: simple procedural textures + tuned materials -->
  <asset>
    <!-- Subtle checker for floor 'tiles' -->
    <texture name="tex-floor" type="2d" builtin="checker" width="512" height="512"
             rgb1="0.78 0.78 0.78" rgb2="0.65 0.65 0.65" mark="none"/>
    <material name="mat-floor" texture="tex-floor" texrepeat="8 8" texuniform="true"
              rgba="1 1 1 1" specular="0.30" shininess="0.60" reflectance="0.08"/>

    <!-- Very low-contrast checker to mimic painted plaster -->
    <texture name="tex-wall" type="2d" builtin="checker" width="512" height="512"
             rgb1="0.93 0.93 0.96" rgb2="0.90 0.90 0.94" mark="none"/>
    <material name="mat-wall" texture="tex-wall" texrepeat="6 2" texuniform="true"
              rgba="1 1 1 1" specular="0.05" shininess="0.10" reflectance="0.02"/>

    <!-- Satin metal for small props if needed -->
    <material name="mat-metal" rgba="0.70 0.72 0.76 1" specular="0.60" shininess="0.80" reflectance="0.25"/>

    <!-- Obstacle material with a touch of specular -->
    <material name="mat-obst" rgba="0.90 0.40 0.40 1" specular="0.20" shininess="0.30"/>
  </asset>

  <!-- Visual quality -->
  <visual>
    <global offwidth="1280" offheight="720"/>
    <quality shadowsize="4096" offsamples="8"/>
    <map znear="0.01" zfar="50"/>
  </visual>

  <worldbody>

    <!-- Finite floor slab (2 x 2 m footprint, 0.1 m thick). Top surface at z=0 -->
    <geom name="floor" type="box" size="1 1 0.05" pos="0 0 0.05" material="mat-floor"
          friction="1.0 0.005 0.0001" condim="3"/>

    <!-- Four walls (2 x 2 x 2 inner volume), thickness 0.05 -->
    <geom type="box" size="1      0.05 1"   pos="0  -1   1" material="mat-wall"/>
    <geom type="box" size="1      0.05 1"   pos="0   1   1" material="mat-wall"/>
    <geom type="box" size="0.05   1    1"   pos="-1  0   1" material="mat-wall"/>
    <geom type="box" size="0.05   1    1"   pos=" 1  0   1" material="mat-wall"/>

    <!-- Ceiling (thin slab at z=2) -->
    <geom type="box" size="1 1 0.05" pos="0 0 2" material="mat-wall"/>

    <!-- Baseboards for nicer wall-floor transition -->
    <geom type="box" size="1   0.02 0.05" pos="0  -0.98 0.05" material="mat-wall"/>
    <geom type="box" size="1   0.02 0.05" pos="0   0.98 0.05" material="mat-wall"/>
    <geom type="box" size="0.02 1    0.05" pos="-0.98 0    0.05" material="mat-wall"/>
    <geom type="box" size="0.02 1    0.05" pos=" 0.98 0    0.05" material="mat-wall"/>

    <!-- Obstacles (kept, but positioned to avoid clipping) -->
    <geom type="cylinder" size="0.10 0.80" pos="0.5 0.5 0.8" material="mat-obst"/>
    <geom type="box"      size="0.20 0.20 0.60" pos="-0.70 -0.50 0.60" material="mat-obst"/>
    <geom type="sphere"   size="0.25" pos="0 -0.85 0.25" material="mat-obst"/>

    <!-- Lighting: a soft 'sun' + a warm ceiling lamp -->
    <!-- Sunlight (directional) for natural shading -->
    <light name="sun" directional="true" dir="-0.6 -0.4 -1.0"
           diffuse="0.7 0.7 0.7" specular="0.2 0.2 0.2" ambient="0.15 0.15 0.18"
           castshadow="true"/>

    <!-- Ceiling light centrally placed -->
    <light name="ceiling" pos="0 0 1.9" dir="0 0 -1" cutoff="100" exponent="2"
           diffuse="0.9 0.85 0.8" specular="0.3 0.3 0.3" ambient="0.05 0.05 0.05"
           castshadow="true" />
           
    <!-- Optional 'window glow' panel (emissive); comment out if not needed -->
    <!-- <geom type="box" size="0.35 0.005 0.30" pos="-0.999 0.3 1.2"
          material="mat-wall" rgba="1 1 1 1" emission="0.3"/> -->

    <!-- Camera: wider overview from a corner -->
    <camera name="overview" pos="2.4 -2.4 1.6" euler="20 0 135" fovy="60"/>

  </worldbody>
</mujoco>

