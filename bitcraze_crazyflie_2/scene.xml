<mujoco model="IndoorRoom">
  <include file="cf2.xml"/>

  <option timestep="0.002" gravity="0 0 -9.81" integrator="RK4"/>

  <asset>
    <material name="mat-floor" rgba="0.6 0.6 0.6 1"/>
    <material name="mat-wall" rgba="0.7 0.7 0.9 1"/>
    <material name="mat-obst" rgba="0.9 0.4 0.4 1"/>
  </asset>

  <worldbody>
    <!-- Floor -->
    <geom type="plane" size="0 0 0.05" material="mat-floor"/>

    <!-- Four walls -->
    <geom type="box" size="1.75 0.05 1.375" pos="0 -1.75 1.375" material="mat-wall"/>
    <geom type="box" size="1.75 0.05 1.375" pos="0  1.75 1.375" material="mat-wall"/>
    <geom type="box" size="0.05 1.75 1.375" pos="-1.75 0 1.375" material="mat-wall"/>
    <geom type="box" size="0.05 1.75 1.375" pos=" 1.75 0 1.375" material="mat-wall"/>

    <!-- Ceiling -->
    <geom type="box" size="1.75 1.75 0.05" pos="0 0 2.75" material="mat-wall"/>

    <!-- Obstacles -->
    <geom type="cylinder" size="0.1 0.8" pos="0.5 0.5 0.8" material="mat-obst"/>
    <geom type="box" size="0.2 0.2 0.6" pos="-0.8 -0.5 0.6" material="mat-obst"/>
    <geom type="sphere" size="0.25" pos="0 -1.0 0.25" material="mat-obst"/>

    <!-- Lighting -->
    <light pos="0 0 3" dir="0 0 -1" diffuse="0.9 0.9 0.9"/>
    <camera name="overview" pos="0 -6 4" xyaxes="1 0 0 0 0.6 0.8" fovy="60"/>
  </worldbody>
</mujoco>
